<style>
	.sso_details{
		disabled : true;		
	}
</style>
<script>
	function toggleSSODetails(){
		if($("#enable_sso").attr('checked')){
			$(".sso_details").removeAttr("disabled");
		}else{
			$(".sso_details").attr("disabled","disabled");
		}
	}
</script>

<h1>ALM Single Sign-On</h1>
<%= form_tag( "/files/dohealthcheck", :remote => true ) do  %>

	
   	<table width="50%" border="0" height="100%">
   		<tr>
			<td colspan="2">
				<font color="red" id="displayError">
					<%= @error %>
				</font>
			</td>
		</tr>
	    <tr height="100%">
	        <td height="100%" colspan="2">
	        	<%= field_set_tag "" do %>
				<table>
					<tr><td>Configure the connection to the Serena Single Sign-on server to enable login to the configurator through SSO.</td></tr>
				</table>
				<% end %>							
	        </td>
	    </tr>
		<tr>
			<td colspan="2">
				<%=check_box_tag("enable_sso", "", false, :onClick =>"toggleSSODetails()")%> Enable Single Sign-On
			</td>
		</tr>
		
		<tr height="100%">
	        <td height="100%" colspan="2">
	        	<div id="sso_details" >
					<table>
						<tr>
							<td>Host name:</td>
							<td><%=text_field_tag("host_name", "", {:class => "sso_details", :disabled=> "disabled"})%></td>
						</tr>
						<tr>
							<td>Port:</td>
							<td><%=text_field_tag("port", "", :class => "sso_details", :disabled=> "disabled")%></td>
						</tr>
						<tr>
							<td colspan="2"><%=check_box_tag("secure_connection", "", false, {:class => "sso_details", :disabled => true})%> Secure (HTTPS) connection</td>
						</tr>
					</table>
				</div>
	        </td>
	    </tr>		
		<tr>
			<table>
				<tr>
					<td><%= button_tag "Test", :type => 'button' %></td>
					<td><%= button_tag "Save", :type => 'button' %></td>
				</tr>
			</table>
		</tr>
    </table>	
  <% end %>